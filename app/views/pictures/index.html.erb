<div class="page-header">
  <h1>Pictures</h1>
</div>

<p><a href="/pictures/new" class="btn btn-primary">Add a New Picture</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Source</th>
      <th>Caption</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td>
          <img src="<%= picture.source %>" width="60">
        </td>
        <td><%= picture.caption %></td>
        <td>
          <a href="/pictures/<%= picture.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/pictures/<%= picture.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_picture/<%= picture.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

